<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>Recast &gt; @ViewBag.Title</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        <script type="text/javascript">
            baseUrl = "@string.Format("{0}://{1}{2}", Request.Url.Scheme, Request.Url.Authority, UrlHelper.GenerateContentUrl("~", new HttpContextWrapper(HttpContext.Current)))"
        </script>
        @Styles.Render("~/Content/css")
        @Styles.Render("~/Content/themes/base/css")
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    
                    <p class="site-title"><a href="@Url.Action("Index", "Home")"><img src="@Url.Content("~/Images/recast_logo.png")" style="border: 0" /></a></p>
                </div>
                <div class="float-right">
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("Go to feed", "GoToFeed", "Feeds")</li>
                            <li>@Html.ActionLink("New feed", "New", "Feeds")</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - Recast</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/jqueryui")
        @RenderSection("scripts", required: false)
        <script type="text/javascript" src="~/Scripts/startup.min.js"></script>
    </body>
</html>
